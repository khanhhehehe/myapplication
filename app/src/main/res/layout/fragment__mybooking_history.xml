<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:companyApp="http://schemas.android.com/apk/res-auto"
    android:layout_weight="10"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Fragment.fragmentUserChild.fragment_MybookingHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/background_container"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_DanhMuc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            companyApp:titleTextAppearance="@style/ActionBar.nameText">

        <ImageView
            android:id="@+id/btnBack_fromMybooking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Lịch sử khung giờ đã đặt"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_myBookinghis"
        android:layout_width="match_parent"
        android:layout_weight="9.2"
        android:layout_height="0dp" />


</LinearLayout>