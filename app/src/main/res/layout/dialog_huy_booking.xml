<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:backgroundTint="#BDBDBD"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="27.5dp"
            android:paddingTop="22dp"
            android:paddingRight="27.5dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingBottom="22dp"
            android:text="Bạn chắc chắn muốn huỷ lịch?"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chooseCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/onclick_dialog_logout"
                android:gravity="center"
                android:padding="16dp"
                android:text="Không"
                android:textColor="@color/blue_900"

                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_cancelBooking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/onclick_dialog_logout"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/red"

                android:text="@string/h_y"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>