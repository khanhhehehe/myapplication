<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lauoutchauthai"
    app:dragEdge="right"
    android:paddingStart="5dp"
    android:layout_marginTop="10dp"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/btnDelete_myHis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Huỷ lịch"
            android:paddingHorizontal="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/red"

            />
    </LinearLayout>

    <!-- Your main layout here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_item_giaodich"
        android:weightSum="3">

        <ImageView
            android:id="@+id/img_AvatarofGame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:src="@drawable/game_bao_nha" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/tv_nameOfGameCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà ma"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dateStartCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Từ: 11/22/3333"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dateEndCancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đến: 33/44/5555"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>