<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5.8"
    android:id="@+id/item_history"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingVertical="10dp"
    android:background="@drawable/bg_item_giaodich">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.4"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/img_AvatarUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:src="@drawable/avatar" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_weight="4.8"
        android:layout_width="0dp"
        android:paddingStart="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_name_user_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Người chơi: Giang"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_date_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Từ : 22/12/2022"
            android:layout_marginVertical="3dp"
            android:textColor="@color/orange" />
        <TextView
            android:id="@+id/tv_date_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"            android:textStyle="bold"

            android:text="Đến : 22/12/2022"
            android:textColor="@color/orange" />
    </LinearLayout>




</LinearLayout>